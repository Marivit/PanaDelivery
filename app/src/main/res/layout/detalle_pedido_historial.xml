<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imagenHistorial"
        android:layout_width="90dp"
        android:layout_height="91dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/descripcionHistorial"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nombreHistorial"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_marginBottom="9dp"
        android:layout_marginEnd="169dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="16dp"
        android:text="nombreProducto"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/descripcionHistorial"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imagenCheckout"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/descripcionHistorial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        android:layout_marginEnd="220dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imagenHistorial"
        app:layout_constraintTop_toBottomOf="@+id/nombreHistorial" />

    <TextView
        android:id="@+id/cantidadHistorial"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="29dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="TextView"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/cancelarProducto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/nombreProducto"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>