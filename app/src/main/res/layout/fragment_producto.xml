            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/cantidadProducto"
            android:layout_width="42dp"
            android:layout_height="50dp"
            android:layout_marginBottom="8dp"
